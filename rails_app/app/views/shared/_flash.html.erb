<% if notice.present? %>
  <div class="mb-6 rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-900">
    <%= notice %>
  </div>
<% end %>
<% if alert.present? %>
  <div class="mb-6 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-900">
    <%= alert %>
  </div>
<% end %>
