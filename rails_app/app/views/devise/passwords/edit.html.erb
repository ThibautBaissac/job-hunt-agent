<% content_for :title, "Définir un nouveau mot de passe" %>

<section class="mx-auto w-full max-w-md space-y-6">
  <header class="space-y-2 text-center">
    <h1 class="text-3xl font-semibold tracking-tight text-indigo-900">Définir un nouveau mot de passe</h1>
    <p class="text-sm text-slate-500">Choisissez un mot de passe sécurisé pour protéger votre compte.</p>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm shadow-slate-200/30">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-5" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="space-y-2">
        <%= f.label :password, "Nouveau mot de passe", class: "text-sm font-medium text-slate-600" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-slate-500">Minimum <%= @minimum_password_length %> caractères.</p>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full rounded-md border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-slate-500 focus:outline-none focus:ring-2 focus:ring-slate-200" %>
      </div>

      <div class="space-y-2">
        <%= f.label :password_confirmation, "Confirmer le mot de passe", class: "text-sm font-medium text-slate-600" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-md border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-slate-500 focus:outline-none focus:ring-2 focus:ring-slate-200" %>
      </div>

      <div>
        <%= f.submit "Mettre à jour le mot de passe", class: "w-full rounded-md bg-indigo-900 px-4 py-2 text-sm font-semibold text-white transition hover:bg-slate-700" %>
      </div>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>
</section>
