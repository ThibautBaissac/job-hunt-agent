<section class="space-y-8">
  <header class="space-y-2">
    <p class="text-sm font-medium text-slate-500">Mes documents</p>
    <h1 class="text-3xl font-semibold tracking-tight text-indigo-900">Mon CV principal</h1>
    <p class="text-sm text-slate-500">Importez votre CV pour qu’il soit utilisé par l’IA et vos futures candidatures.</p>
  </header>

  <div class="flex justify-end">
    <%= link_to "Importer un CV", new_cv_path, class: "inline-flex items-center gap-2 rounded-md bg-indigo-900 px-4 py-2 text-sm font-semibold text-white transition hover:bg-slate-800" %>
  </div>

  <% if @presenter.active_cv.present? %>
    <article class="space-y-6 rounded-xl border border-slate-200 bg-white p-6 shadow-sm shadow-slate-200/30">
      <header class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <p class="text-xs font-semibold uppercase tracking-wide text-emerald-700">CV principal</p>
          <h2 class="text-xl font-semibold text-indigo-900"><%= @presenter.active_cv.source_filename.presence || "Import texte" %></h2>
        </div>
        <p class="text-sm text-slate-500">Mis à jour le <%= l(@presenter.active_cv.updated_at, format: :long) %></p>
      </header>

      <div class="rounded-lg border border-slate-100 bg-slate-50 p-4">
        <p class="whitespace-pre-line text-sm leading-6 text-slate-700"><%= @presenter.active_cv.body_text %></p>
      </div>
    </article>
  <% else %>
    <div class="rounded-xl border border-dashed border-slate-300 bg-slate-50 p-8 text-center">
      <p class="text-lg font-semibold text-indigo-900">Aucun CV importé pour le moment</p>
      <p class="mt-2 text-sm text-slate-500">Importez votre CV pour que nous puissions l’analyser et le réutiliser automatiquement.</p>
      <div class="mt-6">
        <%= link_to "Importer mon premier CV", new_cv_path, class: "inline-flex items-center gap-2 rounded-md bg-indigo-900 px-4 py-2 text-sm font-semibold text-white transition hover:bg-slate-800" %>
      </div>
    </div>
  <% end %>

  <% other_cvs = @presenter.other_cvs %>
  <% if other_cvs.any? %>
    <section class="space-y-4">
      <header>
        <h2 class="text-lg font-semibold text-indigo-900">Historique des imports</h2>
        <p class="text-sm text-slate-500">Ces versions ne sont pas actives mais restent disponibles si besoin.</p>
      </header>

      <ul class="space-y-4">
        <% other_cvs.each do |cv| %>
          <li class="rounded-lg border border-slate-200 bg-white p-4">
            <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
              <div>
                <p class="text-sm font-semibold text-indigo-900"><%= cv.source_filename.presence || "Import texte" %></p>
                <p class="text-xs uppercase tracking-wide text-slate-500">
                  <%= cv.import_method == "upload" ? "Upload fichier" : "Collage texte" %>
                  · Importé le <%= l(cv.created_at, format: :long) %>
                </p>
              </div>
              <p class="text-xs font-medium uppercase tracking-wide text-slate-400">Version inactive</p>
            </div>
            <p class="mt-3 text-sm leading-6 text-slate-600"><%= truncate(cv.body_text, length: 400) %></p>
          </li>
        <% end %>
      </ul>
    </section>
  <% end %>
</section>
