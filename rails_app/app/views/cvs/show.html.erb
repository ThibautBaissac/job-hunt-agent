<section class="space-y-8">
  <header class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <%= link_to "Retour à mes CV", cvs_path, class: "text-sm font-semibold text-indigo-700 hover:text-indigo-900" %>
      <h1 class="mt-2 text-2xl font-semibold tracking-tight text-indigo-900"><%= @cv.display_name %></h1>
      <p class="text-sm text-slate-500">Importé le <%= l(@cv.created_at, format: :long) %></p>
    </div>

    <div class="flex flex-wrap items-center gap-2">
      <%= button_to "Analyser ce CV",
            analyze_cv_path(@cv),
            method: :post,
            class: "inline-flex items-center gap-2 rounded-md border border-indigo-200 px-4 py-2 text-sm font-semibold text-indigo-900 transition hover:bg-indigo-50",
            data: { turbo_stream: true } %>

      <% unless @cv.active? %>
        <%= button_to "Activer cette version",
              activate_cv_path(@cv),
              method: :post,
              class: "inline-flex items-center gap-2 rounded-md bg-indigo-900 px-4 py-2 text-sm font-semibold text-white transition hover:bg-slate-800" %>
      <% else %>
        <span class="inline-flex items-center gap-2 rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-emerald-700">CV actif</span>
      <% end %>
    </div>
  </header>

  <% if @analysis_stream_name.present? %>
    <%= turbo_stream_from @analysis_stream_name %>
  <% end %>

  <article class="space-y-6 rounded-xl border border-slate-200 bg-white p-6 shadow-sm shadow-slate-200/30">
    <div class="grid gap-6 lg:grid-cols-2">
      <section class="space-y-3 rounded-lg border border-slate-100 bg-slate-50 p-4">
        <header class="flex items-center justify-between">
          <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Contenu brut</h2>
          <span class="rounded-full bg-white/80 px-3 py-1 text-xs font-medium text-slate-500">
            <%= @cv.import_method == "upload" ? "Fichier" : "Texte" %>
          </span>
        </header>
        <p class="whitespace-pre-line text-sm leading-6 text-slate-700"><%= @cv.body_text %></p>
      </section>

      <section>
        <div id="<%= dom_id(@cv, :analysis) %>">
          <%= render(@cv.analysis_available? ? "cvs/analysis_panel" : "cvs/analysis_empty", cv: @cv) %>
        </div>
      </section>
    </div>
  </article>
</section>
